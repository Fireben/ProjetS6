<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">	

	<g:HTMLPanel>	
	    <g:HorizontalPanel ui:field="horizontalPanel" width = "100%">
	        <g:FlowPanel ui:field="leftSpacer"/>
		    <g:FlowPanel ui:field="contentContainer">
		    	<g:Label ui:field="titleLabel"/>
	    	</g:FlowPanel>
	    	<g:FlowPanel ui:field="rightSpacer"/>	
			<g:FlowPanel>	
				<g:FlowPanel ui:field="descriptionContainer"/>
				<g:FlowPanel ui:field="statsContainer">	
					<g:Button ui:field="seenButton">
						Seen it !
					</g:Button>
				</g:FlowPanel>
			</g:FlowPanel>
		</g:HorizontalPanel>				 									
	</g:HTMLPanel>
</ui:UiBinder> 
