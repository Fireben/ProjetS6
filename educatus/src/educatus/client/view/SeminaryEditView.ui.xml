<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:my="urn:import:educatus.client.ui"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

<ui:with field='res' type='educatus.resources.Resources'/>

	<ui:style>
		.titleDesc {
			width: 30%;
			margin-left: 50px;
			display: inline-block;
		}
		
		.titleBox {
			width: 200px;
		}
		
		.descBox {
			width: 350px;
			resize: none;
		}
		
		.difficultyList {
			margin-top: 12px;
			vertical-align: top;
		}
		
		.contentPanel {
			margin-right: 200px;
		}
		
		.addTextImg {
			width: 50px;
			height: 50px;
			position: absolute;
			top: 25%;
			padding-left: 8px;
			position: relative;
			vertical-align: middle;
			width: 50px;
		}
		
		.addTextImg:hover {
			cursor: pointer;
		}
		
		.addImageImg {
			height: 50px;
			margin-top: -25px;
			padding-right: 8px;
			position: absolute;
			right: 0;
			top: 50%;
			width: 50px;
		}
		
		.addImageImg:hover {
			cursor: pointer;
		}
		
		.contentPanel {
			width: 30%;
			margin-left: 50px;
		}
		
		@external .gwt-b;
		.gwt-b {
			width: 0px;
			height: 0px;
			
        	background: none;
        	border: none;
    	}
		
		.confirmPanel {
			bottom: 0;
			position: relative;
		}
	</ui:style>

	<g:HTMLPanel>
		<style>
			.addContentWidget {
			border: 1px #2B2B2B;
			border-radius:
			50% 50% 50% 50%;
			bottom: 0;
			height: 100px;
			position: absolute;
			right: 0;
			width: 100px;
			height: 200px
			line-height: 200px;
			position: absolute;
			right: 0;
			width: 200px;
			background-origin: border-box !important;
			background: #00b4f0;
			background: linear-gradient(top, #14c4ff 0, #00bfff 29%, #09c 100%) no-repeat;
			background: -webkit-linear-gradient(top, #14c4ff 0, #00bfff 29%, #09c 100%) no-repeat;
			background: -moz-linear-gradient(top, #14c4ff 0, #00bfff 29%, #09c 100%) no-repeat;
			background: -o-linear-gradient(top, #14c4ff 0, #00bfff 29%, #09c 100%) no-repeat;
			background: -ms-linear-gradient(top, #14c4ff 0, #00bfff 29%, #09c 100%) no-repeat;
			background: linear-gradient(top, #14c4ff 0, #00bfff 29%, #09c 100%) no-repeat;
			-svg-background: linear-gradient(top, #14c4ff 0, #00bfff 29%, #09c 100%) no-repeat;			
			}
		</style>

		<div id="art-mainPage">
			<form>
				<div class="art-blockcontent">
					<h4>
						<div style="margin-left:50px">
							<g:FlowPanel styleName='{style.titleDesc}'>
								<g:Label ui:field="semTitleLabel">Titre :</g:Label>
								<g:TextBox name="semTitleBox" ui:field="semTitleBox"
									styleName='{style.titleBox}' />
								<g:Label ui:field="semDescLabel">Description :</g:Label>
								<g:TextArea name="semDescBox" ui:field="semDescBox"
									styleName='{style.descBox}' />
							</g:FlowPanel>

							<g:ListBox styleName='{style.difficultyList}'>
								<g:item>
									easy
								</g:item>
								<g:item>
									hard
								</g:item>
							</g:ListBox>
						
						<g:HTMLPanel ui:field="contentPanel" styleName="{style.contentPanel}" />
	
						
						<div class="addContentWidget">
							<div style="position: absolute;top: 42%;padding-left: 70px;">
								<g:PushButton ui:field="addTextButton" enabled='true' addStyleNames='{style.gwt-b}'>
									<g:upFace image='{res.addTextButton}'/>
								</g:PushButton>
							</div>
							<div style='position: absolute;top: 15%;padding-left: 135px;'>
								<g:PushButton ui:field="addImageButton" enabled="true" addStyleNames='{style.gwt-b}'>
									<g:upFace image='{res.addImageButton}'/>
								</g:PushButton>
							</div>
							<div style="position: absolute;top: 15%;padding-left: 0px;">
								<g:PushButton ui:field="addVideoButton" enabled="true" addStyleNames='{style.gwt-b}'>
									<g:upFace image='{res.addVideoButton}'/>
								</g:PushButton>
							</div>
						</div>
							<g:FormPanel ui:field="imagePanel"/>
							<g:HTMLPanel ui:field="confirmPanel" styleName='{style.confirmPanel}' />
						</div>
					</h4>	
				</div>
			</form>
		</div>

	</g:HTMLPanel>
</ui:UiBinder>
