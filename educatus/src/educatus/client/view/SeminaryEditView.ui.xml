<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:my="urn:import:educatus.client.ui"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>


	<ui:style>
		.titleDesc {
			width: 30%;
			display: inline-block;
		}
		
		.titleBox {
			width: 200px;
		}
		
		.descBox {
			width: 350px;
			resize: none;
		}
		
		.difficultyList {
			margin-top: 12px;
			vertical-align: top;
		}
		
		.contentPanel {
			margin-right: 200px;
		}
		
		.addTextImg {
			height: 50px;
			padding-left: 8px;
			position: relative;
			vertical-align: middle;
			width: 50px;
		}
		
		.addTextImg:hover {
			cursor: pointer;
		}
		
		.addImageImg {
			height: 50px;
			margin-top: -25px;
			padding-right: 8px;
			position: absolute;
			right: 0;
			top: 50%;
			width: 50px;
		}
		
		.addImageImg:hover {
			cursor: pointer;
		}
		
		.confirmPanel {
			bottom: 0;
			position: relative;
		}
	</ui:style>

	<g:HTMLPanel>
		<style>
			.addContentWidget {
			border: 1px dotted #2B2B2B;
			border-radius:
			50% 50% 50% 50%;
			bottom: 0;
			height: 200px;
			line-height: 200px;
			position:
			absolute;
			right: 0;
			width: 200px;
			}

		</style>

		<div id="art-mainPage">
			<form>
				<div class="art-blockcontent">
					<h4>
						<div style="margin-left:50px">
							<g:FlowPanel styleName='{style.titleDesc}'>
								<g:Label ui:field="semTitleLabel">Titre :</g:Label>
								<g:TextBox name="semTitleBox" ui:field="semTitleBox"
									styleName='{style.titleBox}' />
								<g:Label ui:field="semDescLabel">Description :</g:Label>
								<g:TextArea name="semDescBox" ui:field="semDescBox"
									styleName='{style.descBox}' />
							</g:FlowPanel>
							<g:ListBox styleName='{style.difficultyList}'>
								<g:item>
									easy
								</g:item>
								<g:item>
									hard
								</g:item>
							</g:ListBox>
							<g:HTMLPanel ui:field="contentPanel" styleName='{style.contentPanel}' />

							<div class="addContentWidget">
								<g:Image ui:field="addTextBoxImg" url="images/addText.png"
									styleName="{style.addTextImg}" />
								<g:Image ui:field="addImageImg" url="images/addImage.png"
									styleName="{style.addImageImg}" />
							</div>
							<g:HTMLPanel ui:field="confirmPanel" styleName='{style.confirmPanel}' />
						</div>
					</h4>	
				</div>
			</form>
		</div>

	</g:HTMLPanel>
</ui:UiBinder>
