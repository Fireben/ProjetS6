<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:m='urn:import:educatus.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:with field='res' type='educatus.resources.Resources' />

	<ui:style>
		.textAreaGrid {
		margin-left : auto;
		margin-right : auto;
		}
		.contentPanel {
		padding-bottom:50px;
		}
	</ui:style>

	<g:HTMLPanel styleName='{style.contentPanel}'>
		<g:PushButton ui:field="deleteBtn" enabled='true'>
			<g:upFace image='{res.deleteButton}' />
		</g:PushButton>
		<g:Grid ui:field="textAreaGrid" styleName='{style.textAreaGrid}' />
	</g:HTMLPanel>
</ui:UiBinder>
