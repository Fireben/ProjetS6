<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<display-name>educatus</display-name>

 	<!-- Servlets -->
  	<servlet>
    	<servlet-name>requestservice</servlet-name>
    	<servlet-class>educatus.server.services.requestservice.RequestServiceImpl</servlet-class>
  	</servlet>
  	
  	<servlet>
	    <servlet-name>uploadServlet</servlet-name>
	    <!-- This is the default servlet, it puts files in session -->
	    <servlet-class>educatus.server.servlet.FileUploadServlet</servlet-class>
	</servlet>
	
	<servlet>
    	<servlet-name>imageServlet</servlet-name>
    	<servlet-class>educatus.server.servlet.ImageServlet</servlet-class>
	</servlet>
	
  <context-param>
    <!-- max size of the upload request -->
    <param-name>maxSize</param-name>
    <!-- 3 Mo max -->
    <param-value>3145728</param-value>
  </context-param>
  	
  	
  	<servlet-mapping>
    	<servlet-name>requestservice</servlet-name>
    	<url-pattern>/educatus/requestservice</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
	    <servlet-name>uploadServlet</servlet-name>
	    <url-pattern>*.gupld</url-pattern>
  	</servlet-mapping>
  	
	<servlet-mapping>
	    <servlet-name>imageServlet</servlet-name>
	    <url-pattern>/internalImageServlet/*</url-pattern>
	</servlet-mapping>
  
	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>educatus.html</welcome-file>
	</welcome-file-list>
</web-app>